    <select id="select0EM" resultType="hashmap" parameterType="com.nicetcm.nibsplus.orgsend.model.OrgSendQryParamVO">
    <![CDATA[
        SELECT  AA.BRANCH_CD,
                AA.MAC_NO,
                AA.MON_CHK mon_yn,
                AA.TUE_CHK tue_yn,
                AA.WED_CHK wed_yn,
                AA.THU_CHK thu_yn,
                AA.FRI_CHK fri_yn,
                AA.BASE_DATE trans_date,
                AA.DEPT_CD,
                AA.OFFICE_CD,
                AA.START_DATE calc_start_date,
                AA.END_DATE calc_end_date,
                AA.INFO_GB info_type,
               '',
               '','','','','','','','','','','','','','','','','','','','','','','','','','','','','','','','','','','',''
        FROM    (
                    SELECT  BRANCH_CD,
                            '' AS MAC_NO,
                            '' AS MON_CHK,
                            '' AS TUE_CHK,
                            '' AS WED_CHK,
                            '' AS THU_CHK,
                            '' AS FRI_CHK,
                            BASE_DATE   ,
                            DEPT_CD     ,
                            OFFICE_CD   ,
                            START_DATE  ,
                            END_DATE    ,
                            '2' AS INFO_GB
                    FROM    OP.T_FN_EMART_DEMAND_DATE
                    WHERE   BASE_DATE = TO_CHAR(SYSDATE, 'YYYYMMDD')
                    AND     ORG_SEND_YN = '0'
                    union ALL
                    SELECT  BRANCH_CD,
                            '',
                            MON_CHK,
                            TUE_CHK,
                            WED_CHK,
                            THU_CHK,
                            FRI_CHK,
                            '' AS BASE_DATE     ,
                            '' AS DEPT_CD       ,
                            '' AS OFFICE_CD     ,
                            '' AS START_DATE    ,
                            '' AS END_DATE      ,
                            '1' AS INFO_GB
                    FROM    OP.T_FN_BRANCH_EMART
                    WHERE   ORG_SEND_YN = '0'
                ) AA
    ]]>
    </select>


