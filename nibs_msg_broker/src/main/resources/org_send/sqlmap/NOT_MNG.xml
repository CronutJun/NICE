            <when test='orgCd == "011" or orgCd == "020"'>and notend_date = OP.pkg_fn_common.sf_getPreActDate(TO_CHAR(SYSDATE, 'YYYYMMDD'))</when>
        </choose>
         AND org_cd = #{orgCd}
        <choose>
            <when test='orgCd == "020"'> AND MAC_NO IS NOT NULL</when>
        </choose>
    </select>

