#USE_COL_CNT, COL_LEN, COL_TYPE 순으로 정의되어 져야 하며 SELECT 절 내부를 제외하고는 라인을 띄우면 안된다.
#SELECT 문의 COLUMN은 반드시 50개를 채워줘야 한다.(USE_COL_CNT 만큼 제외한 컬럼은 '' 등 으로 정의
USE_COL_CNT=19
COL_LEN=8,6,8,10,8,12,6,4,4,4,200,8,5,8,6,8,3,15,17
COL_TYPE=N,N,N,A,A,A,A,A,A,A,A,A,A,A,A,A,A,A,A
select to_char( sysdate, 'yyyymmdd' ) as call_cancel_date,
	   to_char( sysdate, 'hh24miss' ) as call_cancel_time,
	   grd.create_date,
	   grd.error_no,
	   grd.jijum_cd,
/*	   
	   CASE WHEN grd.org_cd = '003'
	        THEN CASE WHEN FC_GET_MAP_MAC_NO(1, grd.org_cd, grd.jijum_cd, grd.mac_no ) IS NULL
	                  THEN grd.mac_no
	                  ELSE FC_GET_MAP_MAC_NO(1, grd.org_cd, grd.jijum_cd, grd.mac_no )
	                  END
	        ELSE grd.mac_no
	        END AS mac_no,
	   CASE WHEN grd.org_cd = '003'
	        THEN CASE WHEN FC_GET_MAP_SITE_CD(1, grd.org_cd, grd.jijum_cd, grd.site_cd ) IS NULL
	                  THEN grd.site_cd
	                  ELSE FC_GET_MAP_SITE_CD(1, grd.org_cd, grd.jijum_cd, grd.site_cd )
	                  END
	        ELSE grd.site_cd
	        END AS SITE_CD,
*/
	   grd.mac_no,
	   grd.site_cd,	        
	   '',
	   '',
	   '3',
	   grd.org_msg,
	   err.group_error_cd,
	   '',
	   grd.ACCEPT_DATE,
	   grd.ACCEPT_TIME,
	   '',
	   /*DECODE( grd.org_cd, '003', '003', grd.org_cd ),*/
	   grd.org_cd,
	   mng.crt_no,
	   '',
	   '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', ''
from   t_ct_error_mng_guard grd,
	   t_ct_error_mng 		mng,
	   t_ct_error			err,
	   t_cm_common			co1
	   /*,	   t_cm_common			co2*/
where  grd.guard_send_yn IN ('Y','C','A','E')
AND	   nvl(grd.repair_time, '999999') <> '999999'
and	   grd.create_date > TO_NUMBER(to_char( sysdate - 50, 'yyyymmdd' ))
and	   grd.org_cd = err.org_cd(+)
and	   grd.error_cd = err.error_cd(+)
and	   grd.create_date = mng.create_date
and	   grd.error_no = mng.error_no
and	   co1.large_cd = '2301'
and	   co1.small_cd = grd.recv_place
and	   co1.cd_nm2 = '2000' /*CAPS-2000*/
