#USE_COL_CNT, COL_LEN, COL_TYPE 순으로 정의되어 져야 하며 SELECT 절 내부를 제외하고는 라인을 띄우면 안된다.
#SELECT 문의 COLUMN은 반드시 50개를 채워줘야 한다.(USE_COL_CNT 만큼 제외한 컬럼은 '' 등 으로 정의
USE_COL_CNT=19
COL_LEN=8,6,8,12,6,60,8,50,10,200,6,4,8,6,2,1,10,13,92
COL_TYPE=N,N,A,A,A,A,A,A,A,A,A,A,A,A,A,A,A,A,A
SELECT 	
	 MNG.CREATE_DATE,										/* 장애접수일자				*/
	 MNG.CREATE_TIME,										/* 장애접수시각				*/
	 MNG.JIJUM_CD,											/* 영업점번호				*/
	 MNG.MAC_NO,											/* 기기번호					*/
	 MNG.SITE_CD,											/* 코너번호					*/
	 '',
	 NVL((SELECT CD_NM2 FROM T_CM_COMMON WHERE LARGE_CD = '1130'
	 							AND	CD_NM3 = ERR.ORG_CD
	 							AND CD_NM1 = ERR.GROUP_ERROR_CD)
	 	,'0Z'),												/* 장애코드(그룹장애코드기반 맵핑) */
	 ERR.ERROR_MSG,										
	 MNG.ACCEPT_NM,											/* 접수자명					*/
	 REPLACE(MNG.MSG, CHR(10), ' '),						/* 특이사항					*/
	 MNG.CREATE_TIME,										/* 출동요청일련번호			*/
	 '',
	 MNG.SEND_DATE,											/* 출동통보일자				*/
	 MNG.SEND_TIME,											/* 출동통보시간				*/
	 MNG.GROUP_ERROR_CD,									/* 접수요청사유코드			(맵핑 필요) */
	 '',													/* 고객대기여부				*/
	 '',													
	 '',													/* 접수자 연락처			*/
	 '',
	 '',
	 '',
	 '',
	 '',
	 '',
	 '',
	 '',
	 '', 
	 '', 
	 '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', ''
FROM T_CT_ERROR_MNG MNG,
	 T_CT_ERROR		ERR,
	 T_CM_MAC 		MAC
  WHERE MNG.CREATE_DATE > TO_NUMBER(TO_CHAR((SYSDATE - 1), 'YYYYMMDD'))
    AND MNG.org_cd = '031'
	AND MNG.send_time IS NOT NULL
	AND ( MNG.org_send_yn IS NULL or mng.org_send_yn = '0')
	AND  MNG.ORG_MSG_NO IS NULL 			/* 괄호장애 등록 시 								*/
	AND  SUBSTR(MNG.ERROR_CD, 1, 3) = 'ERR' 
	/*	OR MNG.ERROR_CD = 'USR01' )   괄호장애만 전송한다 		*/
	AND MNG.ORG_CD = MAC.ORG_CD
    AND MNG.JIJUM_CD = MAC.JIJUM_CD
    AND MNG.MAC_NO = MAC.MAC_NO
    AND MNG.ORG_CD = ERR.ORG_CD(+)
    AND MNG.ERROR_CD = ERR.ERROR_CD(+)
    
