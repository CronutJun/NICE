#USE_COL_CNT, COL_LEN, COL_TYPE 순으로 정의되어 져야 하며 SELECT 절 내부를 제외하고는 라인을 띄우면 안된다.
#SELECT 문의 COLUMN은 반드시 50개를 채워줘야 한다.(USE_COL_CNT 만큼 제외한 컬럼은 '' 등 으로 정의
USE_COL_CNT=10
COL_LEN=4,8,6,12,8,7,7,8,4,358
COL_TYPE=A,A,A,A,A,A,A,A,A,A
select 	mng.org_cd,
		CASE WHEN mng.org_cd = '031'
			 THEN '0'||mng.jijum_cd
		     ELSE mng.jijum_cd
		END as jijum_cd,
		mng.site_cd,		
		mng.mac_no,
		mng.create_date,
		mng.error_no,
		mng.recv_user_uid,
		mng.arrival_date,
		mng.arrival_time,
		'',
		'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	'',	''
from	t_ct_error_mng mng,
		t_cm_site_01		site
where	mng.close_yn in ( '1', '2', '3', 'A', 'B', 'C', 'D', 'X', 'Y' )
AND		mng.ARRIVAL_TIME IS NOT NULL
		/*
		(    mng.ARRIVAL_TIME IS NOT NULL
          OR NVL(mng.ERROR_STATUS, '0' ) = '7000'
        )
        */
AND mng.CREATE_DATE > TO_NUMBER(TO_CHAR( SYSDATE-3, 'YYYYMMDD' ))
and      nvl(site.alarm, '0') = '1' 
and		mng.org_cd = site.org_cd
and 	mng.jijum_cd = site.jijum_cd
and		mng.site_cd = site.site_cd
		