#USE_COL_CNT, COL_LEN, COL_TYPE 순으로 정의되어 져야 하며 SELECT 절 내부를 제외하고는 라인을 띄우면 안된다.
#SELECT 문의 COLUMN은 반드시 50개를 채워줘야 한다.(USE_COL_CNT 만큼 제외한 컬럼은 '' 등 으로 정의
USE_COL_CNT=21
COL_LEN=8,12,6,40,8,6,8,6,8,6,8,6,4,60,5,1,200,10,1,1,18
COL_TYPE=A,A,A,A,N,N,N,N,N,N,N,N,A,A,N,N,A,A,A,A,A
SELECT
       JIJUM_CD					/* 지점코드 						*/
      ,MAC_NO                   /* 기기코드 						*/
      ,SITE_CD                  /* 코너코드 						*/
      ,SITE_NM                  /* 코너명    						*/
      ,CREATE_DATE              /* 장애발생년월일 					*/
      ,CREATE_TIME              /* 장애발생시각 					*/
      ,CALL_DATE                /* 출동요청년월일 					*/
      ,CALL_TIME                /* 출동요청시각 					*/
      ,ARRIVAL_DATE             /* 코너도착년월일	 				*/
      ,ARRIVAL_TIME             /* 코너도착시각 					*/
      ,REPAIR_DATE              /* 복구년월일 						*/
      ,REPAIR_TIME              /* 복구시각							*/
      ,MAC_MODEL                /* 기종								*/
      ,MEMO                     /* 장애내용							*/
      ,PENALTY_AMT              /* 패널티금액						*/
      ,DECODE(PENALTY_YN, '0', '1'           /* 패널티미대상여부					*/
      						, '1', '0' )
      ,PENALTY_REASON           /* 패널티미대상사유					*/
      ,''               
      ,''             
      ,''           
      ,''  						
      ,''                       
      , ''
      , ''
      , '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', ''
FROM    T_CT_PENALTY_LIST
WHERE   ORG_SEND_YN <> '2'  
AND		ORG_CD = '003'
	AND		CREATE_DATE > TO_CHAR( SYSDATE - 30, 'YYYYMMDD' )	
	
