#USE_COL_CNT, COL_LEN, COL_TYPE 순으로 정의되어 져야 하며 SELECT 절 내부를 제외하고는 라인을 띄우면 안된다.
#SELECT 문의 COLUMN은 반드시 50개를 채워줘야 한다.(USE_COL_CNT 만큼 제외한 컬럼은 '' 등 으로 정의
USE_COL_CNT=14
COL_LEN=8,12,8,6,10,8,8,6,200,2,6,1,3,144
COL_TYPE=A,A,N,N,A,A,N,N,A,N,A,N,A,A
select 
	   CASE WHEN grd.org_cd='031' AND LENGTH(grd.jijum_cd) = 4
	   		THEN SUBSTR(grd.jijum_cd, 2, 3)
	   		ELSE grd.jijum_cd
	   		END AS jijum_cd,
/*	   grd.jijum_cd,*/
	   grd.mac_no,
	   grd.create_date,
	   grd.create_time,
	   grd.error_no,	   
	   err.group_error_cd,
	   mng.send_date as send_date,
	   mng.send_time as send_time,	   
	   SUBSTR(grd.org_msg, 1, 190),	   
	   SUBSTR(DECODE(MNG.org_cd, '088', '해피콜대상 '|| grd.org_msg, grd.org_msg), 1, 190),
	   
	   CASE WHEN grd.org_cd = '031' AND LENGTH(grd.jijum_cd) = 4
	        THEN CASE WHEN FC_GET_MAP_SITE_CD(1, 'N31', grd.jijum_cd, grd.site_cd ) IS NULL
	                  THEN grd.site_cd
	                  ELSE FC_GET_MAP_SITE_CD(1, 'N31', grd.jijum_cd, grd.site_cd )
	                  END
	        ELSE grd.site_cd
	        END AS SITE_CD,

/*	   grd.site_cd,	        */
	   '1',	   
	   grd.org_cd ,
	   '',	   
	   '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', ''
from   t_ct_error_mng		mng,
	   t_ct_error_mng_guard grd,
	   t_ct_error			err,
	   t_cm_common			co1
where  grd.guard_send_yn = 'C'
and	   grd.create_date > TO_NUMBER(to_char( sysdate - 3, 'yyyymmdd' ))
and	   grd.org_cd = err.org_cd(+)
and	   grd.error_cd = err.error_cd(+)
and	   grd.create_date = mng.create_date
and	   grd.error_no = mng.error_no
and	   co1.large_cd = '2301'
and	   co1.small_cd = grd.recv_place
and	   co1.cd_nm2 = '6000' /*조은-6000*/
